<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mm.android">
    <!-- Glide 이미지 로딩 관련 인터넷 권한 설정 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/app_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/app_icon_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/Theme.Mm.Splash">
        <activity
            android:name=".itemdetail.town.fragment.news.NewsDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Mm.NoActionbar"/>
        <activity
            android:name=".itemdetail.ItemDetailActivity"
            android:exported="false"
            android:theme="@style/Theme.Mm.NoActionbar" />
        <activity
            android:name=".category.CategoryDActivity"
            android:exported="false"
            android:theme="@style/Theme.Mm.NoActionbar" />
        <activity
            android:name=".category.CategoryCActivity"
            android:exported="false"
            android:theme="@style/Theme.Mm.NoActionbar" />
        <activity
            android:name=".category.CategoryBActivity"
            android:exported="false"
            android:theme="@style/Theme.Mm.NoActionbar" />
        <activity
            android:name=".category.CategoryAActivity"
            android:exported="false"
            android:theme="@style/Theme.Mm.NoActionbar" />
        <activity
            android:name=".category.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.Mm.NoActionbar" />
        <activity
            android:name=".address.AddressActivity"
            android:exported="false"
            android:theme="@style/Theme.Mm.NoActionbar" />
        <activity
            android:name=".home.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.Mm.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>